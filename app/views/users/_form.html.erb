<%= form_for user, multipart: true do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class:"form-control", placeholder:"Enter username" %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class:"form-control", placeholder:"Enter email" %>
  </div>

  <div class="form-group">
    <%= form.label :profile, "Profile Image" %><br>
    <%= form.file_field :profile, class:"form-control" %>
  </div>

  <div class="row">
    <div class="col-6">
      <%= form.submit value:"#{submit_btn}", class:"btn btn-sm btn-success float-left" %>
    </div>
    <div class="col-6">
      <%= link_to "Back", users_path, class:"btn btn-sm btn-danger float-right" %>
    </div>
  </div>
<% end %>